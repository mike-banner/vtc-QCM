---
import Layout from '../layouts/Layout.astro';
import OnboardingForm from '../components/OnboardingForm';
---

<Layout title="Partenariat VTC - Onboarding Exclusif">
	<main class="min-h-screen bg-slate-50 flex flex-col items-center justify-center p-4 md:p-8 font-sans">
		
		{/* Header / Intro */}
		<div class="max-w-2xl w-full text-center mb-12 space-y-4">
			<div class="inline-flex items-center justify-center px-3 py-1 bg-white border border-slate-200 rounded-full shadow-sm mb-4">
				<span class="text-xs font-semibold tracking-wide text-slate-800 uppercase">Partenariat Premium</span>
			</div>
			<h1 class="text-4xl md:text-5xl font-bold tracking-tight text-slate-900">
				Initialisation projet transport.
			</h1>
			<p class="text-lg text-slate-600 max-w-lg mx-auto leading-relaxed">
				 Complétez ce dossier pour initier votre accréditation.
			</p>
		</div>

		{/* Formulaire React */}
		<OnboardingForm client:load />

		{/* Footer simple */}
		<footer class="mt-16 text-center text-slate-400 text-sm">
			<p>&copy; {new Date().getFullYear()} VTC Luxury Partners. Tous droits réservés.</p>
		</footer>

	</main>
</Layout>
