            )
        }

        <!-- Tab Navigation -->
        <nav class="flex gap-2 mb-6 border-b border-gray-900 pb-px">
            <button
                class="tab-btn active px-6 py-3 text-[10px] font-bold uppercase tracking-widest transition-all border-b-2 border-blue-500 text-white bg-white/5"
